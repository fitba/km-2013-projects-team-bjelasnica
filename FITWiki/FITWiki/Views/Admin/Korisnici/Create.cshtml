@model FITWiki.Models.Korisnici

@{
    ViewBag.Title = "Novi korisnik";
    Layout = "~/Views/Shared/_Master.cshtml";
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Novi korisnik</legend>
        <div class="form-horizontal">
            <div class="control-group">
                <div class="control-label">
                    @Html.LabelFor(model => model.Ime)
                </div>
                <div class="controls">
                    @Html.EditorFor(model => model.Ime)
                    @Html.ValidationMessageFor(model => model.Ime)
                </div>
            </div>
            <div class="control-group">
                <div class="control-label">
                    @Html.LabelFor(model => model.Prezime)
                </div>
                <div class="controls">
                    @Html.EditorFor(model => model.Prezime)
                    @Html.ValidationMessageFor(model => model.Prezime)
                </div>
            </div>
            <div class="control-group">
                <div class="control-label">
                    @Html.LabelFor(model => model.Spol)
                </div>
                <div class="controls">
                    @Html.RadioButtonFor(model => model.Spol, "M", false) M  
                    @Html.RadioButtonFor(model=> model.Spol, "Ž", false) Ž 
                    @Html.ValidationMessageFor(model => model.Spol)
                </div>
            </div>
            <div class="control-group">
                <div class="control-label">
                    @Html.LabelFor(model => model.DatumRodjenja)
                </div>
                <div class="controls">
                    @Html.EditorFor(model => model.DatumRodjenja)
                    @Html.ValidationMessageFor(model => model.DatumRodjenja)
                </div>
            </div>
            <div class="control-group">
                <div class="control-label">
                    @Html.LabelFor(model => model.Mail)
                </div>
                <div class="controls">
                    @Html.EditorFor(model => model.Mail)
                    @Html.ValidationMessageFor(model => model.Mail)
                </div>
            </div>

            <div class="control-group">
                <div class="control-label">
                    @Html.LabelFor(model => model.KorisnickoIme)
                </div>
                <div class="controls">
                    @Html.EditorFor(model => model.KorisnickoIme)
                    @Html.ValidationMessageFor(model => model.KorisnickoIme)
                </div>
            </div>
            <div class="control-group">
                <div class="control-label">
                    @Html.LabelFor(model => model.Lozinka)
                </div>
                <div class="controls">
                    @Html.EditorFor(model => model.Lozinka)
                    @Html.ValidationMessageFor(model => model.Lozinka)
                </div>
            </div>
            <div class="control-group">
                <div class="control-label">
                    @Html.LabelFor(model => model.PotvrdaLozinke)
                </div>
                <div class="controls">
                    @Html.EditorFor(model => model.PotvrdaLozinke)
                    @Html.ValidationMessageFor(model => model.PotvrdaLozinke)
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <label class="checkbox">
                        @Html.CheckBoxFor(model => model.Aktivan, new { @checked = "ckecked"})
                        @Html.LabelFor(model => model.Aktivan)

                    </label>
                </div>
            </div>
            <div class="form-actions">
                @Html.ActionLink("Nazad", "Index", null, new { @class = "btn" })
                <button type="submit" class="btn btn-primary">Sačuvaj</button>
            </div>
        </div>
    </fieldset>
}
